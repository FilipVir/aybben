extends ../layouts/default-layout.pug
include ../mixins/general-block.pug
include ../mixins/tab-item.pug
include ../mixins/card-slider.pug
include ../partials/contact-us

block content
    main.wrapper
        section.hero-section.container
            div.bubble
            div.bubble-2
            +general-block([{tag: 'h1', text: 'Innovate, Evolve, Succeed', key: 'title'},
                {tag: 'h2', text: 'Welcome to the Future of IT Services', key: 'subTitle'},
                {
                    tag: 'p',
                    text: 'Revolutionize the IT industry with our innovative solutions at Aybben Tech. Thrive in the ever-changing digital landscape with our passion for excellence and commitment to staying ahead.',
                    key: 'description'
                }])
            a.gradient-btn.btn-solid(href='/contact-us.html') Contact Us
        section.our-successes
            ul.container.our-successes-list
                each item in [{number: '+10',text:'projects'},{number: '+20',text:'professionals'},{number: '100%',text:'job success'},{number: '+30',text:'technologies'}]
                    li.item
                        span.item-number=item.number
                        span.item-text=item.text
        div.arrow-block
            a(href='#our-expertise')
                img(src='/assets/images/arrow-bottom.svg' alt='')
        section#our-expertise.our-expertise-section
            div.container
                +general-block([{tag: 'h2', text: 'Our Expertise', key: 'title'}])

            ul.nav-tab.container
                each item,index in [{text:'Mobile Dev.',active: true},{text:'Web Dev.',active: false},{text:'Backend',active: false},{text:'DevOps',active: false},{text:'UX/UI Design',active: false}]
                    li.nav-item
                        if item.active
                            button.nav-link.active(type='button' data-id='tab-' + index)= item.text
                        else
                            button.nav-link(type='button' data-id='tab-' + index)= item.text
            div.tab-content
                div.container
                    -
                        var data=[{
                        image: '1.png',
                        title: 'Mobile Development',
                        subTitle: 'Technologies and Tools',
                        description: 'Specializing in high-performance and user-friendly mobile applications, we leverage Flutter,' +
                        'a powerful cross-platform framework, to create seamless and engaging experiences for iOS and ' +
                        'Android. From development and testing to app store publishing, we guide clients through every step of the process.',
                        images:   ['fluter.png', 'dart.png', 'firebase.png', 'graphQl.png', 'sqLinte.png']
                        },
                        {
                        image: '2.png',
                        title: 'Web Development',
                        subTitle: 'Technologies and Tools',
                        description: 'Experience tailor-made online solutions with our comprehensive web development service. Our team specializes in crafting dynamic, responsive websites, web applications, and innovative solutions that captivate your audience and drive business growth. With expertise spanning various technologies and frameworks, we deliver high-quality web experiences that align with your goals and elevate your online presence to new heights',
                        images:   ['fluter.png', 'angular.png']
                        },
                        {
                        image: '3.png',
                        title: 'Backend',
                        subTitle: 'Technologies and Tools',
                        description: 'Experience seamless applications with our advanced backend development service. We build robust APIs, handle data storage, ensure security, and enable seamless integration across platforms. From efficient database design to scalable server deployment, our backend solutions optimize performance for exceptional user experiences.',
                        images:   ['nest.png', 'node.png','firebase.png','1.png']
                        },
                        {
                        image: '4.png',
                        title: 'DevOps',
                        subTitle: 'Technologies and Tools',
                        description: 'Our DevOps practices streamline development, foster collaboration, and accelerate software delivery. By leveraging tools like Git, Jenkins, Docker, Ansible, and Kubernetes, we automate deployments, monitor systems, and ensure smooth operations. We specialize in infrastructure as code, enabling seamless cloud resource management, and implement CI/CD pipelines for continuous integration and delivery.',
                        images:   ['git.png', '2.png','3.png','4.png','5.png','6.png','7.png','8.png','9.png']
                        },
                        {
                        image: '5.png',
                        title: 'UX/UI Design',
                        subTitle: 'Technologies and Tools',
                        description: 'Our talented UI/UX designers create visually appealing and intuitive interfaces that enhance user experiences. By combining user research, wireframing, and prototyping, we ensure seamless navigation and engaging interactions. We work with design tools such as Figma, Sketch, and Adobe XD.',
                        images:   ['figma.png', 'FigJam.png','sketch.png','zeplin.png','Xd.png','Ps.png','Ai.png']
                        }]
                    each item,index in data
                        +tab-item(item,index)
        section#industry-section.industry-section
            div.bubble
            div.bubble-2
            div.container
                +general-block([{tag: 'h2', text: 'Industries', key: 'title'},
                    {
                        tag: 'p',
                        text: 'We provide expertise, innovative technology solutions, and support to businesses in various industries, helping them succeed in the digital age.',
                        key: 'description'
                    }])
            section.slider-block
                div.slider.owl-carousel
                    -
                        var data = [
                        {image: 'loT.png',title: 'IoT',description: 'We connect devices and systems, unlocking new possibilities in connectivity and automation.'},
                        {image: 'healthcare.jpg',title: 'Healthcare',description: 'We leverage technology to enhance healthcare delivery and improve patient outcomes.'},
                        {image: 'communications.jpg',title: 'Communications',description: 'We enable seamless and efficient communication for businesses, empowering collaboration and productivity.'},
                        {image: 'business.jpg',title: 'Business / IT services',description: 'We provide comprehensive IT solutions and services to streamline operations and drive business success.'}
                        ]
                    each item in data
                        div
                            +card-slider(item)
        section.about-block
            div.container.about-init
                +general-block([{tag: 'h2', text: 'About Us', key: 'title'}])
                p.description  We are a team of tech enthusiasts committed to helping businesses thrive in the digital world. With our expertise in <strong>Flutter,</strong> <strong>Angular,</strong> <strong>Node.js,</strong> and other advanced technologies, we create powerful <strong>Mobile Apps</strong> and dynamic <strong>Websites</strong> that engage audiences and boost business growth. We prioritize our clients' needs, ensuring personalized solutions that go beyond expectations. Our dedication to quality and innovation ensures your technology is secure and up-to-date.
                div.about-buttons
                    a.btn-outline(href='/about-us.html')= 'Learn More'
                    a.btn-solid(href='/contact-us.html')= 'Contact Us'
        section.contact-block
            div.container
                -
                    var text = 'We invite you to reach out to us to learn more about our services or discuss how we can help your business thrive. Let\'s embark on a collaborative journey to unlock the full potential of your digital presence.'
                +contact-section(text)

